<view class="bg_image">
     <view>
    <image class='image' src='https://zhenz-1309499835.cos.ap-beijing.myqcloud.com/hbws%2Fimages%2Fbg.jpg' mode='widthFix'></image>
    <view class="pad">
        <view class='page__title'>
            快捷导航
        </view>
        <!-- weui提供的grid视图 -->
        <view class='weui-grids'>
            <block wx:for="{{ grids }}" wx:for-item="val" wx:key="menusItem">
                <navigator style='width:50%' url='{{val.url}}' class="weui-grid"hover-class='weui-grid_active'>
                    <image class='weui-grid__icon' src='{{ val.image }}'></image>
                </navigator>
            </block>
        </view>
    </view>
  </view>
</view>

