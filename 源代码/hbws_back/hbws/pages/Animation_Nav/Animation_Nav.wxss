page {
  background: -webkit-linear-gradient(top,rgb(243, 240, 242),#f7f6f8,rgb(161, 182, 240));
}
.faceing{
margin-top:150rpx;
display:flex;
justify-content: center;
align-items: center;
}
.faceing image{
  width:500rpx;
  height:700rpx;
}
.prese {
  height: 100rpx;
  text-align: center;
  padding: 0 10rpx;
  
}

.prese image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin-left: 10rpx;
}
.share {
  text-align: center;
  height: 100rpx;
  width: 350rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
}
.share button {
  font-size: 50rpx;
  color: white;
  display: block;
  font-style: normal;
  background-image: linear-gradient(to right, #29bdd9 0%, #276ace 100%);
}
.change image {
  width: 50rpx;
  height: 50rpx;
  padding-right: 20rpx;
  border-radius: 50%;
}
.change {
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  width: 300rpx;
  height: 100rpx;
  justify-content: center;
  background-image: linear-gradient(to right, #29bdd9 0%, #276ace 100%);
}
.change text {
  font-size: 35rpx;
  color: white;
  display: block;
}
.face-list {
  display: flex;
  justify-content: space-around;
}
.face-posi {
  position: fixed;
  bottom: 70rpx;
  left: 0;
  right: 0;
}

.shadow {
  background: rgba(0, 0, 0, 0.6);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
}
.scroll-view {
  width: 100%;
  white-space: nowrap;
}
.scroll-view-item {
  width: 80px;
  display: inline-block;
  text-align: center;
}
.scroll-view-item text {
  font-size: 14px;
}
.scroll-view-item image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 10rpx solid 	#E6E6FA;
}   
.theme {
  background: #E1FFFF;
  height: 350rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
}
.lister{border: 10rpx solid #778899 !important;}
